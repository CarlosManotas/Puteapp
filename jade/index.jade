    main#main
      .ed-container.abcenter
        .ed-item
          figure(alt="logo")
            img(src="img/logo.svg", alt="")
        .ed-item
          figure
            img(src="img/pasos.svg", alt="")
      .ed-container.abcenter
        .ed-item
          form(action="/manual_post",id='form',method='POST')
            textarea#problema(name="problema",placeholder='escribi aqui')
            button SIGUIENTE

      .ed-container.abcenter
        .ed-item
          figure(alt="micro")
            img(src="img/micro.svg")
